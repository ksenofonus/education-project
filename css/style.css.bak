body {
  font-family: Arial, sans-serif;
  font-size: 16px;
  line-height: 24px;
  color: #000000;

  /*  Пример подключения изображения из папки  img */
  
}
.main-header {
	background-color: #6451d5;
	background-image: url("../img/bg-promo.png");
    background-repeat: no-repeat;
    background-position: 410px 157px;
}
.container {
	width: 1080px;
	margin: auto;
	padding-top: 30px;
	padding-bottom: 80px;
}
.main-nav{
	padding-left: 350px;
	paddinig-top: 32px;
}
.main-nav li {
	display: inline-block;
	margin-right: 56px;	
}
.main-nav li:last-child{
	margin-right: 0;
}
.main-nav a {
	text-decoration: none;
	color: #ffffff;
}
.main-header img {
	position: absolute;
}
.promo {
	width: 510px;
	margin-top: 100px;
}
.promo-title{
	color: #ffffff;
	font-size: 50px;
	line-height: 50px;
	margin-bottom: 30px;
}
.promo-text {
	width: 320px;
	color: #bcb3f2;
	margin-bottom: 30px; 
}
.btn {
	display: block;
	color: #ffffff;
	background-color: #382d78;
	text-decoration: none;
	text-transform: uppercase;
}
.btn-purple {
	width: 320px;
	text-align: center;
	padding-top: 27px;
	padding-bottom: 27px;
	
}
